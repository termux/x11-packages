+QMAKE_LFLAGS           += -L/data/data/com.termux/files/usr/lib
+QMAKE_LFLAGS_SHLIB     += -shared
+QMAKE_LFLAGS_PLUGIN    += -shared
+
+## Should be -lpthread, but Termux does not provide
+## libpthread.so library.
+QMAKE_LIBS_THREAD       =
+
+load(qt_config)
